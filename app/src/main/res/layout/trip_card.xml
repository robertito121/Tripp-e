<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="1dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/tripCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trip_card_body">

            <ImageView
                android:id="@+id/destinationFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="27dp" />

            <TextView
                android:id="@+id/tripDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/destinationFlag"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="81dp"
                android:layout_marginTop="42dp" />

            <TextView
                android:id="@+id/milesAwayFromHomeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="81dp"
                android:layout_marginTop="66dp"
                android:text="miles away from home:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeZoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="282dp"
                android:layout_marginTop="66dp"
                android:text="Time Zone:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tcurrencyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="91dp"
                android:text="Currency:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languagesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="189dp"
                android:layout_marginTop="91dp"
                android:text="Languages:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/toDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="205dp"
                android:layout_marginTop="42dp" />

            <TextView
                android:id="@+id/toLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="218dp"
                android:text="to"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/milesAwayFromHome"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="129dp"
                android:paddingLeft="2dp"
                android:layout_toRightOf="@id/milesAwayFromHomeLabel" />

            <TextView
                android:id="@+id/timeZone"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="7dp" />

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="91dp"
                android:layout_marginEnd="238dp" />

            <TextView
                android:id="@+id/languages"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="91dp"
                android:layout_marginEnd="6dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>